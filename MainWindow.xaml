<Window x:Class="FSInputMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSInputMapper"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ModeBackgroundConverter x:Key="ModeBackgroundConverter" />
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </Window.Resources>
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="400,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding AutopilotAltitude}" IsReadOnly="True"/>
        <Button Content="Push" HorizontalAlignment="Left" Margin="491,57,0,0" VerticalAlignment="Top" Width="29" Background="{Binding AltitudeManaged,Converter={StaticResource ModeBackgroundConverter},ConverterParameter={StaticResource True}}" Click="Altitude_Push"/>
        <Button Content="Pull" HorizontalAlignment="Left" Margin="491,105,0,0" VerticalAlignment="Top" Width="29" Background="{Binding AltitudeManaged,Converter={StaticResource ModeBackgroundConverter},ConverterParameter={StaticResource False}}" Click="Altitude_Pull"/>
        <Button Content="+1000" HorizontalAlignment="Left" Margin="400,57,0,0" VerticalAlignment="Top" Width="40" Click="Up1000_Click"/>
        <Button Content="+100" HorizontalAlignment="Left" Margin="445,57,0,0" VerticalAlignment="Top" Width="32" Click="Up100_Click"/>
        <Button Content="-100" HorizontalAlignment="Left" Margin="445,105,0,0" VerticalAlignment="Top" Width="32" Click="Down100_Click"/>
        <Button Content="-1000" HorizontalAlignment="Left" Margin="400,105,0,0" VerticalAlignment="Top" Width="40" Click="Down1000_Click"/>
        <CheckBox Content="Connected" HorizontalAlignment="Left" Margin="703,88,0,0" VerticalAlignment="Top" IsChecked="{Binding IsConnected,Mode=OneWay}"
                  IsEnabled="False" ToolTipService.ShowOnDisabled="True" ToolTip="{Binding ConnectionError}"/>
    </Grid>
</Window>
