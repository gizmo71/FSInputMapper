<Window x:Class="FSInputMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSInputMapper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="120,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Altitude}" IsReadOnly="True"/>
        <Button Content="Push" HorizontalAlignment="Left" Margin="259,86,0,0" VerticalAlignment="Top" Click="Push_Click"/>
        <Button Content="Pull" HorizontalAlignment="Left" Margin="316,86,0,0" VerticalAlignment="Top" Click="Pull_Click"/>
        <Button Content="+1000" HorizontalAlignment="Left" Margin="131,62,0,0" VerticalAlignment="Top" Width="40" Click="Up1000_Click"/>
        <Button Content="+100" HorizontalAlignment="Left" Margin="181,62,0,0" VerticalAlignment="Top" Width="32" Click="Up100_Click"/>
        <Button Content="-100" HorizontalAlignment="Left" Margin="181,110,0,0" VerticalAlignment="Top" Width="32" Click="Down100_Click"/>
        <Button Content="-1000" HorizontalAlignment="Left" Margin="131,110,0,0" VerticalAlignment="Top" Width="40" Click="Down1000_Click"/>
    </Grid>
</Window>
