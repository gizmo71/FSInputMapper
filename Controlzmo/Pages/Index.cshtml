@page
@{
    ViewData["Title"] = "Home page";
}

<table style="font-size: larger;">
    <tr style="font-size: smaller;">
        <th>Strobes</th>
        <td style="text-align: left; line-height: 1;">
            <input type="radio" name="lightsStrobe" class="sendRadio" id="lightsStrobeOn" value="on" />
            <label for="lightsStrobeOn">On</label><br />
            <input type="radio" name="lightsStrobe" class="sendRadio" id="lightsStrobeAuto" value="auto" />
            <label for="lightsStrobeAuto">Auto</label><br />
            <input type="radio" name="lightsStrobe" class="sendRadio" id="lightsStrobeOff" value="off" />
            <label for="lightsStrobeOff">Off</label>
        </td>
        <td><input type="checkbox" id="lightsBeacon" class="sendBoolean" /></td>
        <th><label for="lightsBeacon">Beacon</label></th>
        <td><input type="checkbox" id="lightsWingIce" class="sendBoolean" /></td>
        <th><label for="lightsWingIce">Wing Ice</label></th>
        <td><input type="checkbox" id="lightsNavLogo" class="sendBoolean" /></td>
        <th><label for="lightsNavLogo">Nav/Logo</label></th>
    </tr>
    <tr style="font-size: smaller;">
        <td><input type="checkbox" id="lightsRunwayTurnoff" class="sendBoolean" /></td>
        <th><label for="lightsRunwayTurnoff">Runway Turnoff</label></th>
        <td colspan="2"><input type="checkbox" id="lightsLanding" class="sendBoolean" /></td>
        <th colspan="2" title="Ensure On or Retract (not Off) in game"><label for="lightsLanding">Landing</label></th>
        <th><label for="lightsNose">Nose</label></th>
        <td style="text-align: left; line-height: 1;">
            <input type="radio" name="lightsNose" class="sendRadio" id="lightsNoseTakeOff" value="takeoff" />
            <label for="lightsNoseTakeOff">T.O.</label><br />
            <input type="radio" name="lightsNose" class="sendRadio" id="lightsNoseTaxi" value="taxi" />
            <label for="lightsNoseTaxi">Taxi</label><br />
            <input type="radio" name="lightsNose" class="sendRadio" id="lightsNoseOff" value="off" />
            <label for="lightsNoseOff">Off</label>
        </td>

    </tr>
    <tr style="font-size: smaller;">
        <th><label for="radarSys">Radar</label></th>
        <td style="text-align: left; line-height: 1;">
            <input type="radio" name="radarSys" class="sendRadio" id="radarSys1" value="0" />
            <label for="radarSys1">1</label><br />
            <input type="radio" name="radarSys" class="sendRadio" id="radarSysOff" value="1" />
            <label for="radarSysOff">Off</label><br />
            <input type="radio" name="radarSys" class="sendRadio" id="radarSys2" value="2" />
            <label for="radarSys2">2</label>
        </td>
        <td><input type="checkbox" id="predictiveWindshear" class="sendBoolean" /></td>
        <th><label for="predictiveWindshear">Predictive Windshear</label></th>
        <th><label for="tcasTraffic">Traffic</label></th>
        <td style="text-align: left; line-height: 1;">
            <input type="radio" name="tcasTraffic" class="sendRadio" id="tcasTrafficThreat" value="0" />
            <label for="tcasTrafficThreat">Thrt</label><br />
            <input type="radio" name="tcasTraffic" class="sendRadio" id="tcasTrafficAll" value="1" />
            <label for="tcasTrafficAll">All</label><br />
            <input type="radio" name="tcasTraffic" class="sendRadio" id="tcasTrafficAbove" value="2" />
            <label for="tcasTrafficAbove">Abv</label><br />
            <input type="radio" name="tcasTraffic" class="sendRadio" id="tcasTrafficBelow" value="3" />
            <label for="tcasTrafficBelow">Blw</label>
        </td>
        <th><label for="tcasMode">TCAS</label></th>
        <td style="text-align: left; line-height: 1;">
            <input type="radio" name="tcasMode" class="sendRadio" id="tcasModeStandby" value="0" />
            <label for="tcasModeStandby">Stby</label><br />
            <input type="radio" name="tcasMode" class="sendRadio" id="tcasModeTA" value="1" />
            <label for="tcasModeTA">TA</label><br />
            <input type="radio" name="tcasMode" class="sendRadio" id="tcasModeRA" value="2" />
            <label for="tcasModeRA">TA/RA</label>
        </td>
    </tr>
</table>

<div style="float: left">
    <input type="checkbox" checked disabled />
    <label>COM1</label>
    <input id="com1active" readonly size="7" />
    <input type="button" id="com1swap" value="↔" class="sendButton" />
    <input id="com1standby" is="com-frequency" class="sendText" />
    <br />
    <input type="checkbox" id="com2rx" class="sendBoolean" />
    <label>COM2</label>
    <input id="com2active" readonly size="7" />
    <input type="button" id="com2swap" value="↔" class="sendButton" />
    <input id="com2standby" is="com-frequency" class="sendText" />
</div>
