@page
@{
    ViewData["Title"] = "Home page";
}

<style>
    td { text-align: right; }
    th { text-align: left; padding-right: 2em; }
</style>
<div class="text-center" style="float: right;">
    <table style="font-size: larger;">
        <tr>
            <td><input type="checkbox" id="lightsStrobe" class="sendLights" disabled /></td>
            <th><label for="lightsStrobe">Strobes</label></th>
            <td><input type="checkbox" id="lightsBeacon" class="sendLights" /></td>
            <th><label for="lightsBeacon">Beacon</label></th>
            <td><input type="checkbox" id="lightsWingIce" class="sendLights" /></td>
            <th><label for="lightsWingIce">Wing Ice</label></th>
            <td><input type="checkbox" id="lightsNavLogo" class="sendLights" /></td>
            <th><label for="lightsNavLogo">Nav/Logo</label></th>
        </tr>
        <tr>
            <td><input type="checkbox" id="lightsTaxiTurnoff" class="sendLights" /></td>
            <th><label for="lightsTaxiTurnoff">Turnoff/Taxi</label></th>
            <td colspan="2"><input type="checkbox" id="lightsLanding" class="sendLights" /></td>
            <th colspan="2" title="Ensure On or Retract (not Off) in game"><label for="lightsLanding">Landing</label></th>
            <td><select id="lightsNose"><option disabled selected>INOP</option></select></td>
            <th><label for="lightsNost">Nose</label></th>
        </tr>
    </table>
    <!-- label for="frottle">Frottle</!--label><input id="frottle" disabled /-->
    <div>
        <label for="com2standby">COM2</label>
        <input id="com2active" readonly size="7" />
        <input type="button" id="com2swap" value="↔" />
        <input id="com2standby" type="tel" size="7" min="118.0" max="136.975" pattern="1[1-3]\d\.\d(\d[05]?)?" />
    </div>
    <ul id="messagesList"></ul>
</div>
