<div style="float: right">
    <input type="button" id="testVoice" value="Test Callout" onClick="speak('Monitoring')" />
    <label for="xpndrCode">Transponder Code</label>
    <input id="xpndrCode" size="4" maxlength="4" class="sendText" />
</div>
<div style="float: right">
    <b><label for="serialInbound">Serial Inbound</label></b>
    <br /><input id="serialInbound" maxlength="30" class="sendText" size="20" />
</div>

<div style="clear: both">
    <b><label for="jetbridge">JetBridge</label></b>
    <br /><input id="jetbridge" maxlength="127" class="sendText" style="width: 100%" />
</div>
